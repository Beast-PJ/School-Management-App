<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/gradient_background">

    <!-- Title -->
    <TextView
        android:id="@+id/add_teach"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add New Teacher"
        android:textSize="28sp"
        android:textColor="#FFFFFF"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="24dp"
        android:textStyle="bold"/>

    <!-- Avatar Selection -->
    <ImageView
        android:id="@+id/teacherAvatar"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/add_teach"
        android:layout_marginBottom="16dp"
        android:src="@color/black"
        android:background="@drawable/circle_background"
        android:scaleType="centerCrop"
        android:elevation="8dp"
        android:onClick="onChooseAvatarClick"/>

    <!-- Teacher Password -->
    <EditText
        android:id="@+id/teacher_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Teacher's Name"
        android:inputType="textPassword"
        android:padding="10dp"
        android:layout_below="@id/teacherAvatar"
        android:background="@drawable/edittext_background"
        android:layout_marginTop="20dp"/>

    <!-- Teacher Email -->
    <EditText
        android:id="@+id/teacher_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Teacher's Email"
        android:inputType="textEmailAddress"
        android:padding="10dp"
        android:background="@drawable/edittext_background"
        android:layout_below="@id/teacher_name"
        android:layout_marginTop="30dp"/>



    <!-- Add Teacher Button -->
    <Button
        android:id="@+id/add_teacher_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Teacher"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:background="@drawable/button_gradient"
        android:layout_below="@id/teacher_email"
        android:layout_marginTop="30dp"/>

    <!-- Progress Bar -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"/>
</RelativeLayout>
