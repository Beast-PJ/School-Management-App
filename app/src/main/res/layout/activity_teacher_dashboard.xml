<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <!-- Main content layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_background"
        android:orientation="vertical">

        <!-- App Bar with Elevated Toolbar -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:elevation="10dp"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            android:layout_marginBottom="8dp">

            <!-- Improved Toolbar Title -->
            <TextView
                android:id="@+id/toolbarTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Teacher Dashboard"
                android:textColor="#FFFFFF"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_gravity="left" />
        </androidx.appcompat.widget.Toolbar>

        <!-- Dashboard Cards with Elevation and Rounded Corners in GridLayout -->
        <GridLayout
            android:id="@+id/gridLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:columnCount="2"
            android:rowCount="2"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <!-- Attendance Card with Rounded Corners and Elevation -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardAttendance"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:elevation="12dp"
                android:cardCornerRadius="16dp"
                android:background="@drawable/card_background"
                android:clickable="true"
                android:focusable="true"
                android:onClick="openAttendance">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center_horizontal">

                    <ImageView
                        android:id="@+id/iconAttendance"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:src="@drawable/ic_attendance"
                        app:tint="?attr/colorPrimary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Attendance"
                        android:textSize="18sp"
                        android:textColor="#333333"
                        android:layout_marginTop="8dp"
                        android:textStyle="bold" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Performance Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardPerformance"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:elevation="12dp"
                android:cardCornerRadius="16dp"
                android:background="@drawable/card_background"
                android:clickable="true"
                android:focusable="true"
                android:onClick="openPerformance">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center_horizontal">

                    <ImageView
                        android:id="@+id/iconPerformance"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:src="@drawable/ic_profile"
                        app:tint="?attr/colorPrimary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Performance"
                        android:textSize="18sp"
                        android:textColor="#333333"
                        android:layout_marginTop="8dp"
                        android:textStyle="bold" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Timetable Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardTimetable"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:elevation="12dp"
                android:cardCornerRadius="16dp"
                android:background="@drawable/card_background"
                android:clickable="true"
                android:focusable="true"
                android:onClick="openTimetable">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center_horizontal">

                    <ImageView
                        android:id="@+id/iconTimetable"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:src="@drawable/ic_event"
                        app:tint="?attr/colorPrimary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Timetable"
                        android:textSize="18sp"
                        android:textColor="#333333"
                        android:layout_marginTop="8dp"
                        android:textStyle="bold" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Messages Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardMessages"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:elevation="12dp"
                android:cardCornerRadius="16dp"
                android:background="@drawable/card_background"
                android:clickable="true"
                android:focusable="true"
                android:onClick="openMessages">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center_horizontal">

                    <ImageView
                        android:id="@+id/iconMessages"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:src="@drawable/ic_message"
                        app:tint="?attr/colorPrimary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Messages"
                        android:textSize="18sp"
                        android:textColor="#333333"
                        android:layout_marginTop="8dp"
                        android:textStyle="bold" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Add Student Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardAddStudent"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:elevation="12dp"
                android:cardCornerRadius="16dp"
                android:background="@drawable/card_background"
                android:clickable="true"
                android:focusable="true"
                android:onClick="openAddStudent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center_horizontal">

                    <ImageView
                        android:id="@+id/iconAddStudent"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:src="@drawable/ic_add"
                        app:tint="?attr/colorPrimary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Add Student"
                        android:textSize="18sp"
                        android:textColor="#333333"
                        android:layout_marginTop="8dp"
                        android:textStyle="bold" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Update Student Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardUpdateStudent"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:elevation="12dp"
                android:cardCornerRadius="16dp"
                android:background="@drawable/card_background"
                android:clickable="true"
                android:focusable="true"
                android:onClick="openUpdateStudent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center_horizontal">

                    <ImageView
                        android:id="@+id/iconUpdateStudent"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:src="@drawable/ic_edit"
                        app:tint="?attr/colorPrimary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Update Student"
                        android:textSize="18sp"
                        android:textColor="#333333"
                        android:layout_marginTop="8dp"
                        android:textStyle="bold" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </GridLayout>

    </LinearLayout>

    <!-- Navigation Drawer -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        android:background="@color/white"
        android:headerLayout="@layout/nav_header">

        <!-- Add your menu items in res/menu/nav_menu.xml -->
    </com.google.android.material.navigation.NavigationView>

</androidx.drawerlayout.widget.DrawerLayout>
