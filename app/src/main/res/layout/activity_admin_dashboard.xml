<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/blue_gradient_background">

    <!-- Dashboard Header -->
    <RelativeLayout
        android:id="@+id/dashboardHeader"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/blue_gradient_header"
        android:padding="16dp"
        android:elevation="10dp"
        android:layout_marginBottom="24dp">

        <TextView
            android:id="@+id/adminDashboardTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Admin Dashboard"
            android:textSize="30sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_centerInParent="true"
            android:gravity="center"/>
    </RelativeLayout>

    <!-- Manage Teachers Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/manageTeachersCard"
        android:layout_width="160dp"
        android:layout_height="180dp"
        android:layout_below="@id/dashboardHeader"
        android:layout_marginTop="16dp"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="8dp"
        app:cardCornerRadius="25dp"
        app:cardElevation="12dp"
        android:background="@drawable/blue_gradient_card"
        android:elevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:src="@drawable/ic_teacher"
                android:layout_marginBottom="12dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Manage Teachers"
                android:textStyle="bold"
                android:textSize="18sp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Manage Students Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/manageStudentsCard"
        android:layout_width="160dp"
        android:layout_height="180dp"
        android:layout_below="@id/dashboardHeader"
        android:layout_marginTop="16dp"
        android:layout_alignParentEnd="true"
        app:cardCornerRadius="25dp"
        app:cardElevation="12dp"
        android:background="@drawable/blue_gradient_card"
        android:elevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:src="@drawable/ic_student"
                android:layout_marginBottom="12dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Manage Students"
                android:textStyle="bold"
                android:textSize="18sp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Manage Events Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/manageEventsCard"
        android:layout_width="160dp"
        android:layout_height="180dp"
        android:layout_below="@id/manageTeachersCard"
        android:layout_marginTop="16dp"
        android:layout_alignParentStart="true"
        app:cardCornerRadius="25dp"
        app:cardElevation="12dp"
        android:background="@drawable/blue_gradient_card"
        android:elevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:src="@drawable/ic_event"
                android:layout_marginBottom="12dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Manage Events"
                android:textStyle="bold"
                android:textSize="18sp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- View Reports Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/viewReportsCard"
        android:layout_width="160dp"
        android:layout_height="180dp"
        android:layout_below="@id/manageStudentsCard"
        android:layout_marginTop="16dp"
        android:layout_alignParentEnd="true"
        app:cardCornerRadius="25dp"
        app:cardElevation="12dp"
        android:background="@drawable/blue_gradient_card"
        android:elevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:src="@drawable/ic_report"
                android:layout_marginBottom="12dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View Reports"
                android:textStyle="bold"
                android:textSize="18sp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>
